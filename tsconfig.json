{
    "compilerOptions": {
      "target": "ES5",
      "module": "ES6",
      "lib": ["ES2015", "DOM"],
      "declaration": true,
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node"
    },
    "include": ["src/**/*"]
  }